<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ShowProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00008577"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/back"
            app:title="@string/profile"
            app:titleTextColor="@color/comb_1" />

        <TextView
            android:id="@+id/bar___ID"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="4dp"
            android:background="#BFBEBE" />

        <LinearLayout
            android:id="@+id/informationLayoutID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar___ID"
            android:background="@color/white"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePicID"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:padding="5dp"
                app:civ_border_color="@color/comb_1"
                app:civ_border_width="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:src="@drawable/name" />

                    <TextView
                        android:id="@+id/userProfileNameID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center_vertical"
                        android:padding="1dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:src="@drawable/mail" />

                    <TextView
                        android:id="@+id/userProfileEmailID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center_vertical"
                        android:padding="1dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/userProfilePhoneID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center_vertical"
                        android:padding="1dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/informationLayoutID"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:src="@drawable/id" />

            <TextView
                android:id="@+id/userProfileStudentidID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:textColor="@color/comb_1"
                android:textIsSelectable="true"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coachingInformationID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/informationLayoutID"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:src="@drawable/batch" />

            <TextView
                android:id="@+id/userProfileBatchID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:textColor="@color/comb_1"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/availableTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coachingInformationID"
            android:layout_marginBottom="5dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="Disable"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="#FA1403"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userPostID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/availableTextID"
            android:layout_margin="15dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="@string/post_profile"
            android:textAlignment="center"
            android:textColor="@color/comb_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userProfileRecylerViewID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userPostID"
            android:layout_margin="3dp"
            android:layout_marginTop="10dp"
            android:padding="3dp" />

    </RelativeLayout>

</ScrollView>